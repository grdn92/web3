<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.com.projetoSeLiga.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>br.com.projetoSeLiga.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarColaboradorServlet</servlet-name>
        <servlet-class>br.com.projetoSeLiga.controller.CadastrarColaboradorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtualizarColaboradorServlet</servlet-name>
        <servlet-class>br.com.projetoSeLiga.controller.AtualizarColaboradorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoverColaboradorServlet</servlet-name>
        <servlet-class>br.com.projetoSeLiga.controller.RemoverColaboradorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExceptionHandlerServlet</servlet-name>
        <servlet-class>br.com.projetoSeLiga.exception.ExceptionHandlerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarAreaServlet</servlet-name>
        <servlet-class>br.com.projetoSeLiga.controller.CadastrarAreaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarMateriaServlet</servlet-name>
        <servlet-class>br.com.projetoSeLiga.controller.CadastrarMateriaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarColaboradorServlet</servlet-name>
        <url-pattern>/CadastrarColaboradorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtualizarColaboradorServlet</servlet-name>
        <url-pattern>/AtualizarColaboradorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoverColaboradorServlet</servlet-name>
        <url-pattern>/RemoverColaboradorServlet</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/ExceptionHandlerServlet</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>ExceptionHandlerServlet</servlet-name>
        <url-pattern>/ExceptionHandlerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarAreaServlet</servlet-name>
        <url-pattern>/CadastrarAreaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarMateriaServlet</servlet-name>
        <url-pattern>/CadastrarMateriaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
